@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "角色詳細資料";
}

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("角色名稱：")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("編輯角色", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })｜
    @Html.ActionLink("返回角色列表", "Index")
</p>
<h4>目前隸屬 @Html.DisplayFor(model => model.Name) 的使用者清單：</h4>
<hr />
@if (ViewBag.UserCount == 0)
{
    <p class="text-danger">該角色內暫時沒有使用者。</p>
}
else
{ 
<div class="row">
    <div class="col-xs-12">
        <table class="table table-hover table-bordered table-striped" id="example">
            <thead>
                <tr>
                    <th>使用者帳號</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Users)
                {
                    <tr>
                        <td>
                            @item.UserName
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
}

